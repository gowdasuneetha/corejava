
public class Xpattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

int k=1;
for(int i=1;i<=3;i++) {
	for(int j=1;j<=3;j++) {
		System.out.print(k + " ");
		k++;
	}
	System.out.println(" ");
}


for(int i=1;i<=4;i++) {
	for(int j=1;j<=4;j++) {
		System.out.print("*");
	}
	System.out.println(" ");
}

for(int i=1;i<=4;i++) {
	for(int j=1;j<=i;j++) {
		System.out.print("*");    //*
								//  **
								//  ***
								//	****
	}
	System.out.println("");
}

for(int i=1;i<=4;i++) {
	for(int j=4;j>=i;j--) {   // nested for loop --loop within a loop is called nested loop
		System.out.print("*");    //****
								//  ***
								//  **
								//  *
	}
	System.out.println(" ");
}

for(int i=4;i>=1;i--) {
	for(int j=1;j<=4;j++) {
		System.out.print("*");
	}
	System.out.println(" ");
}
	}

}
